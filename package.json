{
  "name": "d3-luxon",
  "version": "1.1.0",
  "description": "Luxon-based d3-time and d3-scale implementations",
  "keywords": [
    "d3",
    "time",
    "scale",
    "visualization"
  ],
  "homepage": "https://github.com/yamass/d3-luxon",
  "license": "BSD-3-Clause",
  "author": {
    "name": "Yann Massard",
    "url": "https://github.com/yamass"
  },
  "type": "module",
  "module": "dist/index.js",
  "main": "dist/index.js",
  "types": "src/index.d.ts",
  "exports": {
    "import": "./dist/index.js",
    "types": "./src/index.d.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yamass/d3-luxon.git"
  },
  "files": [
    "dist/**/*.js",
    "src/**/*.js",
    "src/*.d.ts"
  ],
  "scripts": {
    "prebuild": "rm -f dist/*",
    "build": "yarn test && node build.js",
    "test": "mocha 'test/**/*-test.js' && eslint src",
    "prepublishOnly": "rm -rf dist && yarn test",
    "postpublish": "git push && git push --tags"
  },
  "sideEffects": false,
  "dependencies": {
    "@types/d3-scale": "^4.0.8",
    "d3-time": "^3.1.0",
    "d3-scale": "^4.0.2",
    "d3-array": "^3.2.4",
    "luxon": "^3.4.4"
  },
  "peerDependencies": {
    "d3-scale": "^4.0.2",
    "d3-array": "^3.2.4",
    "luxon": "^3.4.4"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "mocha": "10.4.0",
    "esbuild": "^0.21.5"
  }
}
