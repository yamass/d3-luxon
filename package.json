{
  "name": "d3-luxon",
  "version": "1.1.0",
  "description": "Luxon-based d3-time and d3-scale implementations",
  "keywords": [
    "d3",
    "time",
    "scale",
    "visualization"
  ],
  "homepage": "https://github.com/yamass/d3-luxon",
  "license": "BSD-3-Clause",
  "author": {
    "name": "Yann Massard",
    "url": "https://github.com/yamass"
  },
  "type": "module",
  "module": "dist/index.js",
  "types": "src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/yamass/d3-luxon.git"
  },
  "files": [
    "dist/**/*.js",
    "src/**/*.js",
    "src/*.d.ts"
  ],
  "scripts": {
    "prebuild": "rm -f dist/*",
    "build": "esbuild src/index.js --bundle --outfile=dist/index.js --format=esm",
    "test": "mocha 'test/**/*-test.js' && eslint src",
    "prepublishOnly": "rm -rf dist && yarn test",
    "postpublish": "git push && git push --tags"
  },
  "sideEffects": false,
  "dependencies": {
    "@types/d3-scale": "^3.2.0",
    "d3": "^7.9.0",
    "luxon": "^1.25.0"
  },
  "devDependencies": {
    "eslint": "6",
    "mocha": "9",
    "esbuild": "^0.21.4"
  }
}
